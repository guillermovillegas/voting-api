# =============================================================================
# Hackathon Voting API - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------

# Server port (default: 3000)
PORT=3000

# Node environment: development | production | test
NODE_ENV=development

# Frontend URL for CORS (comma-separated for multiple origins)
CLIENT_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (PostgreSQL)
# -----------------------------------------------------------------------------

# Full connection string (required)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://username:password@localhost:5432/voting_db

# Individual connection parameters (optional, used if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=5432
DB_USER=username
DB_PASSWORD=your_secure_password
DB_NAME=voting_db

# Enable SSL for database connections (required for Azure/cloud databases)
# Set to 'true' for production
DB_SSL=false

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# -----------------------------------------------------------------------------
# AUTHENTICATION (JWT)
# -----------------------------------------------------------------------------

# JWT signing secret - CRITICAL: Use a strong random string in production!
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Token expiration time (default: 7d)
# Formats: 60, "2 days", "10h", "7d"
JWT_EXPIRES_IN=7d

# Refresh token expiration (default: 30d)
JWT_REFRESH_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# GIT REPOSITORY CREDENTIALS (Optional - for CI/CD)
# -----------------------------------------------------------------------------

# GitHub
GITHUB_REPO_URL=https://github.com/your-org/your-repo

# Azure DevOps
AZURE_DEVOPS_ORG=your-org
AZURE_DEVOPS_PROJECT=your-project
AZURE_DEVOPS_REPO_URL=https://dev.azure.com/your-org/your-project/_git/your-repo
AZURE_DEVOPS_USER=your-username
AZURE_DEVOPS_PAT=your-personal-access-token

# -----------------------------------------------------------------------------
# DEPLOYMENT (Render)
# -----------------------------------------------------------------------------

# Render service ID (for CLI deployments)
RENDER_SERVICE_ID=srv-xxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# OPTIONAL: MONITORING & LOGGING
# -----------------------------------------------------------------------------

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true
