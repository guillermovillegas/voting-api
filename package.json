{
  "name": "voting-app",
  "version": "0.1.0",
  "private": true,
  "description": "Hackathon Voting App - Concurrent Agent Development Test",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:server": "npm run dev -w @voting/server",
    "dev:client": "npm run dev -w @voting/client",
    "build": "npm run build --workspaces --if-present",
    "build:server": "npm run build -w @voting/server",
    "build:client": "npm run build -w @voting/client",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "db:migrate": "tsx packages/server/src/core/migrations/cli.ts run",
    "db:migrate:status": "tsx packages/server/src/core/migrations/cli.ts status",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
