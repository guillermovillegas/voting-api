// Prisma Schema for Hackathon Voting App
//
// OWNERSHIP: PROTECTED (AGENT_INFRA)
// Changes require user approval and coordination
//
// To apply changes:
//   npx prisma db push (development)
//   npx prisma migrate dev (production)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER & AUTH MODELS (AGENT_AUTH)
// ============================================================================

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(VOTER)
  teamId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  team         Team?         @relation(fields: [teamId], references: [id])
  votes        Vote[]
  privateNotes PrivateNote[]

  @@index([email])
  @@index([teamId])
}

enum UserRole {
  ADMIN
  VOTER
}

// ============================================================================
// TEAM MODELS (AGENT_TEAMS)
// ============================================================================

model Team {
  id                String   @id @default(uuid())
  name              String   @unique
  presentationOrder Int?
  hasPresented      Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  members       User[]
  votesReceived Vote[]
  presentations Presentation[]
  privateNotes  PrivateNote[]

  @@index([presentationOrder])
}

// ============================================================================
// VOTING MODELS (AGENT_VOTING)
// ============================================================================

model Vote {
  id          String   @id @default(uuid())
  userId      String
  teamId      String
  isFinalVote Boolean  @default(false)
  publicNote  String?
  submittedAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // Constraints: One final vote per user
  @@unique([userId, isFinalVote], name: "one_final_vote_per_user")
  @@index([teamId])
  @@index([userId])
}

model PrivateNote {
  id        String   @id @default(uuid())
  userId    String
  teamId    String
  note      String   @default("")
  ranking   Int      @default(0)
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
  @@index([userId])
}

// ============================================================================
// PRESENTATION MODELS (AGENT_PRESENT)
// ============================================================================

model Presentation {
  id          String             @id @default(uuid())
  teamId      String
  status      PresentationStatus @default(UPCOMING)
  startedAt   DateTime?
  completedAt DateTime?

  // Relations
  team       Team        @relation(fields: [teamId], references: [id], onDelete: Cascade)
  timerState TimerState?

  @@index([status])
  @@index([teamId])
}

enum PresentationStatus {
  UPCOMING
  CURRENT
  COMPLETED
}

// Single global timer state
model TimerState {
  id              String   @id @default("global")
  isActive        Boolean  @default(false)
  durationSeconds Int      @default(300) // 5 minutes
  startedAt       DateTime?
  pausedAt        DateTime?
  elapsedSeconds  Int      @default(0)
  presentationId  String?  @unique

  // Relations
  presentation Presentation? @relation(fields: [presentationId], references: [id])
}

